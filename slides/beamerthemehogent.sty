%%----------------------------------------------------------------------------
%% Sectiekop. Gebruik dit als volgt:
%%   \section{Titel deel}
%%   \sectionframe{Ondertitel deel}
\newcommand{\sectionframe}[1]{%
  {
    \setbeamertemplate{background canvas}{%
      \color{HoGentBlue}\rule{\paperwidth}{\paperheight}
    }
    \begin{frame}[plain]
      \fcolorbox{white}{HoGentBlue}{%
        \begin{minipage}[c][.9\textheight][t]{\textwidth}
          \usebeamercolor[fg]{part page}\usebeamerfont{title}\insertsection

          \vspace{5mm}

          \usebeamerfont{subtitle}#1
        \end{minipage}
      }
    \end{frame}
  }
}

\newcommand{\sectionframelogo}[1]{%
  \sectionframe{%
    #1
    \vfill
    \includegraphics[width=3cm]{img/HG-woordmerk-inv}
  }
}


